generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model
model User {
  id        String    @id @default(cuid())    // unique ID, auto-generated
  username  String    @unique
  password  String
  firstName String?
  lastName  String?
  todos     Todo[]                            // 1 to many
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt               // auto-update on every change
}


// Todo model - represents a task
model Todo {
  id          String   @id @default(cuid())
  title       String
  description String   @default("")
  done        Boolean  @default(false)      // completed status
  userId      String                        // foreign key to User
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId, done])  // creates database index for fast queries
}